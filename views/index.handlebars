<div class="container pt-5">

  <div class="text-center my-5">
    <h1>Account Login</h1>
  </div>

  <form action="/member" method="POST" name="name">
    <div class="row">
      <div class="d-flex justify-content-center">
        <div class="col-md-4 col-sm-6">
          <div class="input-group mb-3">
            <!--<span class="input-group-text" id="username-input">@</span>-->
            <input type="text" class="form-control mb-3" placeholder="Username" aria-label="Username"
              aria-describedby="username-input">
          </div>
        </div>
      </div>
    </div>

    <div class="row">
      <div class="d-flex justify-content-center">
        <div class="col-md-4 col-sm-6">
          <div class="input-group mb-3">
            <input type="text" class="form-control mb-3" placeholder="Password" aria-label="Password">
          </div>
        </div>
      </div>
    </div>
    <div class="d-flex justify-content-center mt-2">
      <button type="submit" class="btn btn-dark">Sign in</button>
    </div>
  </form>
</div>